.col-md-12
  =link_to "Home", root_path, {class: "btn btn-info"}

-if @product != nil
  .col-md-4
    #item
      #li
        %h3
        #span= @product.name
        =link_to image_tag(@product.image), product_path(@product)
      #li
        %strong Price:
        #span= number_to_currency(@product.price)

- if @products != nil
  -@products.each do |p|
    .col-md-4
      #item
        #li
          %h3
          #span= p.name
          =link_to image_tag("#{p.image}"), product_path(p)
        #li
          %strong Price:
          #span= number_to_currency(p.price)
